<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_10sdp"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardBackgroundColor="@color/transparent"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_corner_white_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp"
            android:paddingLeft="@dimen/_3sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_28sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_dialog_activity_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Activity Date"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="center|start"/>

                <Space
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_3sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Activity      :  "
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="center|start"/>


                <TextView
                    android:id="@+id/tv_dialog_activity_activity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Activity"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/black"
                    android:gravity="center|start"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Type           :  "
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="center|start"/>

                <TextView
                    android:id="@+id/tv_dialog_activity_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Type"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/black"
                    android:gravity="center|start"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Due Date   :  "
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="center|start"/>

                <TextView
                    android:id="@+id/tv_dialog_activity_due_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Due Date"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/black"
                    android:gravity="center|start"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:text="Detail         :  "
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="center|start"/>

                <TextView
                    android:id="@+id/tv_dialog_acti_dtls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Detail"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/black"
                    android:gravity="center|start"
                    android:layout_marginBottom="@dimen/_3sdp"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_5sdp"
            android:background="@drawable/gradient_bottom"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:visibility="visible" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:orientation="horizontal">


            <com.breezefieldsalesmaxpaints.widgets.AppCustomTextView
                android:id="@+id/tv_dialog_activity_yes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Ok"
                android:textSize="@dimen/_13sdp"
                android:gravity="center"
                android:backgroundTint="#57a518"
                android:layout_gravity="center"
                android:background="@drawable/selector_order_history_bg"
                android:textColor="@drawable/selector_text_clor_blue_white"
                android:clickable="true"
                android:focusable="true"
                />

        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>